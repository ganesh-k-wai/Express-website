<div class="container my-5 contact bg-subtle-warning">

  <div class="row d-flex justify-content-center">
    <div class="col-4 contactname">
     <div class="text-center mb-5">
        <h1   >
          Contact Us
        </h1>
      </div>
      </div>
  </div>
  <div class="container py-5">
    <div class="row justify-content-center align-items-center">
      
      <!-- Form Section -->
      <div class="col-md-6">
        <div class="card shadow-lg p-4 border-0 rounded-4">
          <h3 class="text-center mb-4 text-primary fw-bold">Register Now</h3>
          
          <form action="/submit" method="POST">
            
            <div class="mb-3">
              <input
                type="text"
                id="name"
                placeholder="Full Name"
                class="form-control text-center shadow-sm border-0 rounded-3"
                name="p_name"
                required
              />
            </div>
  
            <div class="mb-3">
              <input
                type="number"
                id="mobile"
                placeholder="Mobile Number"
                class="form-control text-center shadow-sm border-0 rounded-3"
                name="p_mobile"
                required
              />
            </div>
  
            <div class="mb-3">
              <input
                type="email"
                id="email"
                placeholder="Email Address"
                class="form-control text-center shadow-sm border-0 rounded-3"
                name="p_email"
                required
              />
            </div>
  
            <div class="mb-3">
              <textarea
                class="form-control text-center shadow-sm border-0 rounded-3"
                placeholder="Address"
                name="p_address"
                rows="3"
                required
              ></textarea>
            </div>
  
            <div class="mb-3">
              <textarea
                name="p_comment"
                class="form-control text-center shadow-sm border-0 rounded-3"
                placeholder="Short Comment"
                rows="3"
              ></textarea>
            </div>
  
            <div class="text-center">
              <button class="btn btn-primary w-100 py-2 rounded-3 shadow-sm" type="submit" 
                style="background: linear-gradient(to right, #007bff, #4CAF50); border: none;">
                Submit
              </button>
            </div>
  
          </form>
        </div>
      </div>
  
      <!-- Map Section -->
      <div class="col-md-6">
        <div class="rounded-4 shadow-lg overflow-hidden">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3651.906020070785!2d90.41277521538358!3d23.810311384564692!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755b88a73fd1751%3A0x91ff4897f1f98087!2sDhaka%20City%20Corporation!5e0!3m2!1sen!2sbd!4v1619265158272!5m2!1sen!2sbd"
            width="100%"
            height="490"
            style="border:2; border-radius: 12px;"
            allowfullscreen=""
            loading="lazy"
          ></iframe>
        </div>
      </div>
  
    </div>
  </div>
  
</div>


